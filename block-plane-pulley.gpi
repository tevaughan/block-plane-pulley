
set contour
set cntrparam levels 25
set cntrparam linear
set format x "%g"
set format y "%g"
set format z "%.2f"
set grid
set hidden3d
set isosamples 60
set key below
set output "block-plane-pulley.png"
set samples 100
set term pngcairo size 800,800
set xlabel "mu"
set ylabel "theta"

a(mr,mu,theta) = (2.0/(4.0 + mr)) * (1.0 - mu*cos(theta) - sin(theta))
b(mr,mu,theta) = (a(mr,mu,theta) < 0.0 ? 0.0 : a(mr,mu,theta))

splot [0.0:1.0] [0.0:90.0] b(0.5, x, y*pi/180.0) title ""

